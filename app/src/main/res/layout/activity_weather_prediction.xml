<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.weathermasters.PredictionActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWetterOrt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="15dp"
                android:text="@string/heute"
                android:textSize="21sp"
                android:id="@+id/labelHeute" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewHeuteIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="left"
                    android:scaleType="centerCrop"
                    android:src="@drawable/day_clear"
                    android:contentDescription=""/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="25Â° C"
                        android:id="@+id/textView"
                        android:paddingTop="25dp" />

                    <TextView
                        android:id="@+id/textViewHeuteBeschreibung"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Sonnig"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="251dp"
                android:id="@+id/prediction_listView"></ListView>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
