<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.weathermastersnew.favorite_cities"
    android:id="@+id/favorite_cities">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Favoriten"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search:"
        android:id="@+id/search"
        android:textSize="24sp"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editVon"
        android:maxLines="1"
        android:layout_alignTop="@+id/search"
        android:layout_toEndOf="@+id/search" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/background_material_light"
        android:id="@+id/imageButton"
        android:src="@mipmap/add"
        android:layout_alignBottom="@+id/search"
        android:layout_toEndOf="@+id/editVon" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/editVon"
        android:layout_alignParentStart="true"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="163dp"
                android:layout_height="59dp"
                android:text="City1"
                android:textSize="24sp"
                android:layout_below="@+id/editVon"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView"
                android:textIsSelectable="false"
                android:gravity="center_vertical" />

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/star"
            android:id="@+id/ImageViewIcon" />

    </LinearLayout>


</RelativeLayout>
